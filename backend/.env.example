# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/aiforhealth
MONGODB_TEST_URI=mongodb://localhost:27017/aiforhealth_test

# MongoDB Connection Pool Settings
MONGODB_MAX_POOL_SIZE=20
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=10000

# Database Options
MONGODB_RETRY_WRITES=true
MONGODB_WRITE_CONCERN=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security - HTTPS/TLS (Production)
# Set to 'true' in production to enforce HTTPS
ENFORCE_HTTPS=false

# Security - Secrets Management (Production)
# Use AWS Secrets Manager, HashiCorp Vault, or similar in production
# Example: AWS_SECRETS_MANAGER_ENABLED=true
USE_SECRETS_MANAGER=false
SECRETS_MANAGER_REGION=us-east-1

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info

# Error Monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@aiforhealth.com
FROM_NAME=AI for Health

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=aiforhealth-uploads

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379