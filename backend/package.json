{
  "name": "aiforhealth-backend",
  "version": "1.0.0",
  "description": "AI Healthcare & Medical Appointment System Backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node run-dev.js",
    "start:prod": "NODE_ENV=production node run-dev.js",
    "dev": "node run-dev.js",
    "dev:watch": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/server.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:auth": "jest src/services/__tests__/AuthService.test.ts --coverage",
    "test:appointment": "jest src/services/__tests__/AppointmentService.test.ts --coverage",
    "test:middleware": "jest src/middleware/__tests__ --coverage",
    "test:utils": "jest src/utils/__tests__ --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "db:seed": "ts-node -r tsconfig-paths/register src/scripts/database.ts seed",
    "db:clear": "ts-node -r tsconfig-paths/register src/scripts/database.ts clear",
    "db:reset": "ts-node -r tsconfig-paths/register src/scripts/database.ts reset",
    "db:status": "ts-node -r tsconfig-paths/register src/scripts/database.ts status",
    "prepare": "npm run build",
    "prestart": "echo 'Starting with ts-node (no build required)'",
    "validate": "npm run type-check && npm run lint && npm run test:ci"
  },
  "keywords": [
    "healthcare",
    "ai",
    "medical",
    "appointments",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^10.38.0",
    "@sentry/profiling-node": "^10.38.0",
    "@sentry/react": "^10.38.0",
    "@types/uuid": "^9.0.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.3.4",
    "mongoose": "^8.20.4",
    "morgan": "^1.10.0",
    "nodemailer": "^8.0.1",
    "redis": "^4.6.12",
    "rimraf": "^5.0.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^5.12.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.10",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.4",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
